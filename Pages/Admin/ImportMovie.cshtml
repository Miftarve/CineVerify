@page
@model CineVerify.Pages.Admin.ImportMovieModel
@{
    ViewData["Title"] = "Importa Film";
}

<div class="admin-heading">
    <h1><i class="bi bi-cloud-download me-2"></i>Importa Film</h1>
    <a asp-page="./Movies" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-1"></i> Torna all'elenco
    </a>
</div>

<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Cerca Film da Importare</h4>
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="searchQuery" name="searchQuery" value="@Model.SearchQuery"
                               placeholder="Titolo del film da cercare..." required>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i> Cerca
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchQuery) && Model.SearchResults.Any())
    {
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Risultati della Ricerca</h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 80px">Poster</th>
                                    <th>Titolo</th>
                                    <th>Anno</th>
                                    <th>Valutazione</th>
                                    <th>Stato</th>
                                    <th style="width: 150px">Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var movie in Model.SearchResults)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movie.PosterPath))
                                            {
                                                <img src="@movie.PosterPath" alt="@movie.Title" class="img-thumbnail" style="width: 50px" />
                                            }
                                            else
                                            {
                                                <div class="no-poster-small">
                                                    <i class="bi bi-film"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@movie.Title</strong>
                                            @if (!string.IsNullOrEmpty(movie.OriginalTitle) && movie.OriginalTitle != movie.Title)
                                            {
                                                <br />

                                                <small class="text-muted">@movie.OriginalTitle</small>
                                            }
                                        </td>
                                        <td>@(movie.ReleaseDate?.Year.ToString() ?? "N/A")</td>
                                        <td>
                                            <span class="badge bg-warning text-dark">@movie.Rating</span>
                                            <small>(@movie.VoteCount)</small>
                                        </td>
                                        <td>
                                            @if (Model.ExistingMovieIds.Contains(movie.TmdbId))
                                            {
                                                <span class="badge bg-info"><i class="bi bi-check2-circle me-1"></i> Già Importato</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success"><i class="bi bi-arrow-down-circle me-1"></i> Disponibile</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="https://www.themoviedb.org/movie/@movie.TmdbId" target="_blank" class="btn btn-sm btn-outline-primary" title="Vedi su TMDB">
                                                    <i class="bi bi-box-arrow-up-right"></i>
                                                </a>

                                                @if (!Model.ExistingMovieIds.Contains(movie.TmdbId))
                                                {
                                                    <form method="post" class="d-inline">
                                                        <input type="hidden" name="tmdbId" value="@movie.TmdbId" />
                                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Importa film">
                                                            <i class="bi bi-download"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <a asp-page="./EditMovie" asp-route-id="@Model.ExistingMovieMap[movie.TmdbId]" class="btn btn-sm btn-outline-primary" title="Modifica">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.SearchQuery))
    {
        <div class="col-md-12">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i> Nessun risultato trovato per "<strong>@Model.SearchQuery</strong>".
            </div>
        </div>
    }
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Styles {
    <style>
        .no-poster-small {
            width: 50px;
            height: 70px;
            background-color: #e9e9e9;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 4px;
        }

            .no-poster-small i {
                font-size: 1.5rem;
                color: #aaa;
            }
    </style>
}

@section Scripts {
    <script>
        // Auto-dismiss per gli alert
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function() {
                $(this).remove();
            });
        }, 4000);
    </script>
}