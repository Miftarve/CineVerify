@page
@model CineVerify.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrazione";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h2>@ViewData["Title"] a CineVerify</h2>
            </div>
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h5 class="card-title text-center mb-4">Crea un nuovo account</h5>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3 mb-md-0">
                                <input asp-for="Input.Nome" class="form-control" autocomplete="given-name" aria-required="true" placeholder="Mario" />
                                <label asp-for="Input.Nome">Nome</label>
                                <span asp-validation-for="Input.Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Cognome" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Rossi" />
                                <label asp-for="Input.Cognome">Cognome</label>
                                <span asp-validation-for="Input.Cognome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@esempio.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Conferma Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary">Registrati</button>
                    </div>

                    <div class="text-center">
                        <p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Hai già un account? Accedi</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}