@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="welcome-banner mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 mb-3">Benvenuto in CineVerify</h1>
                <p class="lead">La piattaforma per la verifica e scoperta di contenuti cinematografici.</p>
            </div>
            <div class="col-md-4 text-end">
                <i class="bi bi-film dashboard-icon"></i>
            </div>
        </div>
    </div>
</div>

<!-- Film Più Recenti -->
<h2 class="section-title mb-4"><i class="bi bi-calendar-check me-2"></i>Film Più Recenti</h2>
<div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
    @foreach (var movie in Model.LatestMovies)
    {
        <div class="col">
            <div class="movie-card">
                <div class="movie-poster">
                    @if (!string.IsNullOrEmpty(movie.PosterPath))
                    {
                        <img src="@movie.PosterPath" alt="@movie.Title" class="img-fluid" />
                    }
                    else
                    {
                        <div class="no-poster">
                            <i class="bi bi-film"></i>
                        </div>
                    }
                    <div class="movie-rating">
                        <span><i class="bi bi-star-fill me-1"></i>@movie.Rating.ToString("0.0")</span>
                    </div>
                </div>
                <div class="movie-info">
                    <h5 class="movie-title"><a asp-page="/Movies/Details" asp-route-id="@movie.Id">@movie.Title</a></h5>
                    <div class="movie-year">
                        @(movie.ReleaseDate?.Year.ToString() ?? "N/A")
                        @if (movie.IsVerified)
                        {
                            <span class="verified-badge ms-2" title="Film verificato"><i class="bi bi-patch-check-fill"></i></span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Film Con Valutazione Più Alta -->
<h2 class="section-title mb-4"><i class="bi bi-star me-2"></i>I Più Votati</h2>
<div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
    @foreach (var movie in Model.TopRatedMovies)
    {
        <div class="col">
            <div class="movie-card">
                <div class="movie-poster">
                    @if (!string.IsNullOrEmpty(movie.PosterPath))
                    {
                        <img src="@movie.PosterPath" alt="@movie.Title" class="img-fluid" />
                    }
                    else
                    {
                        <div class="no-poster">
                            <i class="bi bi-film"></i>
                        </div>
                    }
                    <div class="movie-rating">
                        <span><i class="bi bi-star-fill me-1"></i>@movie.Rating.ToString("0.0")</span>
                    </div>
                </div>
                <div class="movie-info">
                    <h5 class="movie-title"><a asp-page="/Movies/Details" asp-route-id="@movie.Id">@movie.Title</a></h5>
                    <div class="movie-year">
                        @(movie.ReleaseDate?.Year.ToString() ?? "N/A")
                        @if (movie.IsVerified)
                        {
                            <span class="verified-badge ms-2" title="Film verificato"><i class="bi bi-patch-check-fill"></i></span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Consigliati Per Te -->
<div class="recommendations-section">
    <h2 class="section-title mb-4"><i class="bi bi-lightbulb me-2"></i>Consigliati Per Te</h2>

    @if (Model.HasRecommendations && !string.IsNullOrEmpty(Model.RecommendationText))
    {
        <div class="card mb-4">
            <div class="card-body gemini-recommendation">
                <div class="ai-badge">
                    <i class="bi bi-stars me-1"></i> Consigli personalizzati generati da IA
                </div>
                <div class="recommendation-text">
                    @Model.RecommendationText
                </div>
            </div>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
        @foreach (var movie in Model.RecommendedMovies)
        {
            <div class="col">
                <div class="movie-card">
                    <div class="movie-poster">
                        @if (!string.IsNullOrEmpty(movie.PosterPath))
                        {
                            <img src="@movie.PosterPath" alt="@movie.Title" class="img-fluid" />
                        }
                        else
                        {
                            <div class="no-poster">
                                <i class="bi bi-film"></i>
                            </div>
                        }
                        <div class="movie-rating">
                            <span><i class="bi bi-star-fill me-1"></i>@movie.Rating.ToString("0.0")</span>
                        </div>
                    </div>
                    <div class="movie-info">
                        <h5 class="movie-title"><a asp-page="/Movies/Details" asp-route-id="@movie.Id">@movie.Title</a></h5>
                        <div class="movie-year">
                            @(movie.ReleaseDate?.Year.ToString() ?? "N/A")
                            @if (movie.IsVerified)
                            {
                                <span class="verified-badge ms-2" title="Film verificato"><i class="bi bi-patch-check-fill"></i></span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="text-center mt-4 mb-5">
    <a asp-page="/Movies/Index" class="btn btn-primary btn-lg">
        <i class="bi bi-film me-2"></i> Esplora tutti i film
    </a>
</div>

@section Styles {
    <style>
        .section-title {
            font-weight: 700;
            border-left: 4px solid var(--primary-color);
            padding-left: 1rem;
        }

        .movie-card {
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
            background-color: #fff;
        }

            .movie-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            }

        .movie-poster {
            position: relative;
            aspect-ratio: 2/3;
            overflow: hidden;
            background-color: #eee;
        }

            .movie-poster img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s;
            }

        .movie-card:hover .movie-poster img {
            transform: scale(1.05);
        }

        .no-poster {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #e5e5e5;
        }

            .no-poster i {
                font-size: 3rem;
                color: #999;
            }

        .movie-rating {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: rgba(0,0,0,0.8);
            color: #ffcc00;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        .movie-info {
            padding: 1rem;
        }

        .movie-title {
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 1.1rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

            .movie-title a {
                color: inherit;
                text-decoration: none;
            }

        .movie-year {
            color: #777;
            font-size: 0.9rem;
        }

        .verified-badge {
            color: #4caf50;
        }

        .recommendations-section {
            position: relative;
        }

        .gemini-recommendation {
            background-color: rgba(63, 81, 181, 0.05);
            position: relative;
            border-left: 4px solid var(--primary-color);
        }

        .ai-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            font-size: 0.8rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        .recommendation-text {
            font-size: 1rem;
            line-height: 1.6;
            padding: 0.5rem 0;
        }
    </style>
}